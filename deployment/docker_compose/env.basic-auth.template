# Basic Authentication Configuration Template for Onyx
# Copy this file to .env in the deployment/docker_compose directory to use it

# Web domain configuration
WEB_DOMAIN=http://localhost:3000

# Authentication type set to basic for username/password authentication
AUTH_TYPE=basic

# Session expiration time (7 days default)
SESSION_EXPIRE_TIME_SECONDS=604800

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Read-only database user configuration
DB_READONLY_USER=db_readonly_user
DB_READONLY_PASSWORD=password

# Optional: Enable email verification for basic auth
# Uncomment and configure the following if you want email verification:
#REQUIRE_EMAIL_VERIFICATION=true
#SMTP_USER=your-email@company.com
#SMTP_PASS=your-email-password
#SMTP_SERVER=smtp.gmail.com
#SMTP_PORT=587

# Optional: Restrict to specific email domains
#VALID_EMAIL_DOMAINS=example.com

# Show extra connectors
SHOW_EXTRA_CONNECTORS=False